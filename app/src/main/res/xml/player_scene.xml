<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/expanded"
        app:constraintSetStart="@id/collapsed"
        app:duration="300"
        app:motionInterpolator="easeInOut">

        <OnSwipe
            app:dragDirection="dragDown"
            app:maxAcceleration="200"
            app:touchAnchorId="@+id/videoViewContainer"
            app:touchAnchorSide="top" />

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/ivSongCover"
                app:percentX="0.5"
                app:percentY="0.2" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="30"
                app:motionTarget="@id/tvSongName" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="30"
                app:motionTarget="@id/tvArtistName" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="60"
                app:motionTarget="@id/tvSongNameExpanded" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="60"
                app:motionTarget="@id/tvArtistNameExpanded" />

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/expanded">

        <Constraint
            android:id="@id/videoViewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/ivSongCover"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/videoViewContainer" />

        <Constraint
            android:id="@id/tvSongName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:alpha="0"
            app:layout_constraintBottom_toTopOf="@id/tvArtistName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivSongCover" />

        <Constraint
            android:id="@id/tvArtistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/ivSongCover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSongName" />

        <Constraint
            android:id="@+id/tvSongNameExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="@id/ivSongCover"
            app:layout_constraintStart_toStartOf="@id/ivSongCover"
            app:layout_constraintTop_toBottomOf="@id/ivSongCover" />

        <Constraint
            android:id="@+id/tvArtistNameExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="@id/ivSongCover"
            app:layout_constraintStart_toStartOf="@id/ivSongCover"
            app:layout_constraintTop_toBottomOf="@id/tvSongNameExpanded" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">

        <Constraint
            android:id="@id/videoViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/ivSongCover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@id/videoViewContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/videoViewContainer" />

        <Constraint
            android:id="@id/tvSongName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:alpha="1"
            app:layout_constraintBottom_toTopOf="@id/tvArtistName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSongCover"
            app:layout_constraintTop_toTopOf="@id/ivSongCover" />

        <Constraint
            android:id="@id/tvArtistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/ivSongCover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSongCover"
            app:layout_constraintTop_toBottomOf="@id/tvSongName" />

        <Constraint
            android:id="@+id/tvSongNameExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="@id/ivSongCover"
            app:layout_constraintStart_toStartOf="@id/ivSongCover"
            app:layout_constraintTop_toBottomOf="@id/ivSongCover" />

        <Constraint
            android:id="@+id/tvArtistNameExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="@id/ivSongCover"
            app:layout_constraintStart_toStartOf="@id/ivSongCover"
            app:layout_constraintTop_toBottomOf="@id/tvSongNameExpanded" />

    </ConstraintSet>

</MotionScene>