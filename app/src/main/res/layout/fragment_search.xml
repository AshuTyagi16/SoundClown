<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent"
    android:fitsSystemWindows="true"
    app:layoutDescription="@xml/collapsing_toolbar"
    app:layout_collapseMode="parallax">

    <TextView
        android:id="@+id/tvSearch"
        style="@style/Text.Primary.Bold"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal|bottom"
        android:text="@string/search"
        android:textColor="@color/white"
        android:padding="@dimen/padding_normal"
        android:background="@drawable/bg_color_search_view"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/svCollapsable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/svCollapsable"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_white_rounded_view"
        app:defaultQueryHint="@string/search_hint"
        android:layout_marginStart="@dimen/padding_normal"
        android:layout_marginEnd="@dimen/padding_normal"
        app:layout_constraintBottom_toTopOf="@id/rvCategories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSearch"
        app:queryHint="@string/search_hint" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:layout_marginTop="@dimen/padding_small"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svCollapsable"
        tools:itemCount="10"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/cell_category"
        tools:spanCount="2" />

</androidx.constraintlayout.motion.widget.MotionLayout>